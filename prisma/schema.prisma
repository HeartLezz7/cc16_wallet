// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @unique @default(autoincrement())
  password  String    @db.VarChar(20)
  email     String    @unique @db.VarChar(50)
  firstName String    @db.VarChar(30)
  lastName  String    @db.VarChar(30)
  phone     String    @unique @db.VarChar(10)
  deletedAt DateTime?
  Account   Account[]
}

model Account {
  id            Int           @unique @default(autoincrement())
  user          User          @relation(fields: [userId], references: [id])
  userId        Int           @map("user_id")
  type          AccountType   @relation(fields: [accountTypeId], references: [id])
  accountTypeId Int           @map("account_type_id")
  accountName   String        @unique @map("account_name") @db.VarChar(100)
  amount        Int           @default(0)
  status        Boolean       @default(true)
  deletedAt     DateTime?
  senders       Transaction[] @relation("sender")
  receivers     Transaction[] @relation("receiver")
}

model AccountType {
  id       Int             @unique @default(autoincrement())
  category AccountCategory
  Account  Account[]

  @@map("account_type")
}

model TransactionType {
  id          Int                 @unique @default(autoincrement())
  category    TransactionCategory
  Transaction Transaction[]

  @@map("transaction_type")
}

model Transaction {
  id                Int             @unique @default(autoincrement())
  sender            Account         @relation(name: "sender", fields: [senderId], references: [id])
  senderId          Int             @map("sender_id")
  receiver          Account         @relation(name: "receiver", fields: [receiverId], references: [id])
  receiverId        Int             @map("receiver_id")
  transactionType   TransactionType @relation(fields: [transactionTypeId], references: [id])
  transactionTypeId Int             @map("transaction_type_id")
  amount            Int
  payerName         String          @map("payer_name") @db.VarChar(50)
  description       String?         @db.VarChar(50)
  createdAt         DateTime        @default(now()) @map("created_at")
  deletedAt         DateTime?
}

enum AccountCategory {
  SAVINGS
  FIXED
  CURRENT
}

enum TransactionCategory {
  EXPENSES
  INCOME
  TRANSFER
}
